<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/restaurantSearchNameEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/drawable_restaurantsearchrect"
        android:drawableStart="@drawable/baseline_search_24"
        android:hint="가게명을 입력해주세요"
        android:paddingHorizontal="12dp"
        android:paddingVertical="4dp"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/categoriesLinearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/categoriesLinearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="12dp"
        app:layout_constraintEnd_toStartOf="@id/restaurantArraySpinner"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/restaurantSearchNameEditText">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/koreanFoodButton"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp"
            android:text="한식" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/japaneseFoodButton"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp"
            android:text="일식" />


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/chineseFoodButton"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp"
            android:text="중식" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/westernFoodButton"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp"
            android:text="양식"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintVertical_bias="0.583" />

    </LinearLayout>

    <Spinner
        android:id="@+id/restaurantArraySpinner"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        app:layout_constraintBottom_toBottomOf="@id/categoriesLinearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/categoriesLinearLayout"
        app:layout_constraintTop_toTopOf="@id/categoriesLinearLayout" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/restaurantRecyclerView"
        android:layout_width="match_parent"
        android:padding="4dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/categoriesLinearLayout"
        app:spanCount="2"
        tools:listitem="@layout/item_restaurant" />

</androidx.constraintlayout.widget.ConstraintLayout>
